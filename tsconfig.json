{
  "compilerOptions": {
    "outDir": "./lib/",
    "noImplicitAny": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "inlineSources": true,
    "sourceMap": true
  },
  "exclude": [
    "../node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
