{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strictNullChecks": true,
    "inlineSources": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*",
    "../src/**/*"
  ]
}
